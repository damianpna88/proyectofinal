<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp">

    <!--> Numero de etapa </!-->
    <TextView
        android:id="@+id/textViewIntervalOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!--> Duración de la etapa </!-->
    <TextView
        android:id="@+id/textViewIntervalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duración: "/>

    <!--> Temperatura Principal Formato: °C +- Desvío</!-->
    <TextView
        android:id="@+id/textViewIntervalTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: "/>

    <!--> pH Formato: n° +- Desvío</!-->
    <TextView
        android:id="@+id/textViewIntervalPh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pH: "/>

    <!--> Temperatura Decoccion Formato: °C +- Desvío</!-->
    <TextView
        android:id="@+id/textViewIntervalTemperatureDecoccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Decocción: "/>

    <!--> Cantidad de agua a agregar</!-->
    <TextView
        android:id="@+id/textViewIntervalAmountWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cant. de Agua a Agregar: "/>

    <!--> Temperatura Agua a agregar</!-->
    <TextView
        android:id="@+id/textViewIntervalTemperatureWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura del agua: "/>


</android.support.v7.widget.CardView>